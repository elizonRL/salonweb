---
import Boton from "./Boton";

const services = [
  {
    name: "Hair Services",
    details: "Haircuts, coloring, styling, and more.",
    price: 45,
  },
  {
    name: "Nais Services",
    details: "Manicures, pedicures, and nail treatments.",
    price: 25,
  },
  {
    name:"Skin Care",
    details:"Facials, peels, and advanced treatments.",
    price: 65
  },
  {
    name:"Body Treatments",
    details:"Massages, body wraps, and more.",
    price: 85
  }
];
---

<aside>
  <div class="body-details">
    {
      services.map((services, index) => (
        <div class="section">
          <h3>{services.name}</h3>
          <span>{services.details}</span>
          <div class="footer-details">
            <small>From ${services.price}</small>
            
          </div>
        </div>
      ))
    }
  </div>
</aside>

<style scoped>
  .section {
    padding: 10px 0;
    margin: 10px 0;
  }
  .footer-details {
    display: flex;
    align-items: center;
    gap: 8px;
    padding-top: 5px;
  }
  span {
    font-weight: 200;
    font-size: 16px;
    text-wrap: wrap;
    color: #6b7280;
  }
  small{
    font-size: 20px;
    font-weight: 600;
  }
  h3 {
    font-size: 20px;
    font-weight: bold;
    margin: 0;
  }
</style>
